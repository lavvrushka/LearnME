<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LearnMe.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LearnMe"
    xmlns:views="clr-namespace:LearnMe.Views"
    xmlns:controls="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent  Route="auth_main" ContentTemplate="{DataTemplate views:AuthenticationPage}" />
    <ShellContent  Route="auth_login" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent  Route="auth_signup" ContentTemplate="{DataTemplate views:SignUpPage}" />
    <ShellContent  Route="main" ContentTemplate="{DataTemplate views:MainPage}" />

    <ShellContent  Route="user" ContentTemplate="{DataTemplate views:UserPage}" />
    <ShellContent  Route="explore" ContentTemplate="{DataTemplate views:ExplorePage}" />
    <ShellContent  Route="create_group" ContentTemplate="{DataTemplate views:CreateGroupPage}" />
    
    <ShellContent  Route="user_groups" ContentTemplate="{DataTemplate views:UserGroupsPage}" />
    <ShellContent  Route="user_settings" ContentTemplate="{DataTemplate views:UserSettingsPage}" />
    <ShellContent  Route="achievements" ContentTemplate="{DataTemplate views:AchievementsPage}" />
    <ShellContent  Route="avatar" ContentTemplate="{DataTemplate views:AvatarPage}" />




</Shell>
